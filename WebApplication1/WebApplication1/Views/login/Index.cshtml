<div class="container">
    <div class="card">
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">
                <p style="color:red; padding:10px;">@ViewBag.Message</p>
            </div>
        }

        <h2>Create an Account</h2>

        <form method="post" id="signUpForm">
            <input type="text" name="Name" placeholder="Full Name" required>
            <input type="email" name="username" placeholder="Email" required>
            <input type="password" name="password" placeholder="Password" required id="password">
            <input type="password" name="ConfirmPassword" placeholder="Confirm Password" required id="confirmPassword">
            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a href="@Url.Action("login", "login")">Log in</a></p>
    </div>
</div>

<script>
    document.getElementById('signUpForm').onsubmit = function(event) {
        var password = document.getElementById('password').value;
        var confirmPassword = document.getElementById('confirmPassword').value;

        if (password !== confirmPassword) {
            alert('Passwords do not match!');
            event.preventDefault(); // Stop form submission
        }
    };
</script>
